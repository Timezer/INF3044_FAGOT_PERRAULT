<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.esiea.fagot_perrault.inf3044_fagot_perrault.MainActivity"
    tools:showIn="@layout/app_bar_main" >

    <TextView
        android:id="@+id/textMain_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_1"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textMain_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_2"
        android:textSize="20dp"
        android:layout_below="@id/textMain_1"
        android:paddingTop="10dp"
        android:textColor="#0095DA" />

    <TextView
        android:id="@+id/textMain_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_below="@id/textMain_1"
        android:layout_toRightOf="@id/textMain_2"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/textMain_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_3"
        android:textSize="20dp"
        android:layout_below="@id/textMain_2"
        android:paddingTop="10dp"
        android:textColor="#0095DA"/>

    <TextView
        android:id="@+id/textMain_Heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_below="@id/textMain_2"
        android:layout_toRightOf="@id/textMain_3"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/textMain_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_4"
        android:textSize="20dp"
        android:layout_below="@id/textMain_3"
        android:paddingTop="10dp"
        android:textColor="#0095DA"/>

    <TextView
        android:id="@+id/textMain_Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_below="@id/textMain_3"
        android:layout_toRightOf="@id/textMain_4"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="#FF0000" />

    <ImageView
        android:id="@+id/imageMain"
        app:srcCompat="@drawable/meme_study"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textMain_1"
        android:paddingTop="15dp"
        android:paddingLeft="275dp"/>

    <Button
        android:id="@+id/boutonMain_Refresh"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/textMain_4"
        android:text="@string/content_5"
        android:layout_marginTop="11dp"
        android:onClick="refresh"/>

    <Button
        android:id="@+id/boutonMain_color_1"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/textMain_4"
        android:text="@string/content_6"
        android:layout_marginTop="66dp"
        android:onClick="bg_default"/>

    <Button
        android:id="@+id/boutonMain_color_2"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/textMain_4"
        android:text="@string/content_7"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="135dp"
        android:onClick="bg_change"/>

</RelativeLayout>